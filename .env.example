# CivicBand Environment Variables
# Copy this file to .env and adjust values for local development

# Django Settings
# SECRET_KEY=your-secret-key-here

# Set to true for development (enables dev_ API keys, detailed errors)
DEBUG=true

# Domain for first-party request detection (Referer header matching)
# Use localhost:9000 for local Docker development
CIVIC_BAND_DOMAIN=localhost:9000

# Umami Analytics Configuration
# URL of your Umami instance
UMAMI_URL=https://analytics.civic.band

# Website ID for tracking (from Umami dashboard)
UMAMI_WEBSITE_ID=6250918b-6a0c-4c05-a6cb-ec8f86349e1a

# API Key for server-side tracking (from Umami Settings > Profile > Generate API Key)
UMAMI_API_KEY=your_api_key_here

# Enable/disable analytics tracking (true/false)
UMAMI_ANALYTICS_ENABLED=true

# Umami API Credentials (for data retrieval script only)
# These are only needed for the cron job that retrieves analytics data
# Not needed for sending events to Umami
UMAMI_USERNAME=your_umami_username
UMAMI_PASSWORD=your_umami_password

# Error Tracking (Bugsink/Sentry)
# DSN for error reporting - leave empty to disable
# SENTRY_DSN=https://...@bugsink.example.com/...
SENTRY_ENVIRONMENT=development

# Logfire Tracing and Structured Logging
# Token for Logfire - leave empty to disable in production
# In DEBUG mode, logs go to console regardless of token
# LOGFIRE_TOKEN=your_logfire_token_here

# Internal Service Authentication
# Secret for X-Service-Secret header (for civic.observer)
# Must not be 'dev-secret-change-me' in production
CIVIC_OBSERVER_SECRET=dev-secret-change-me
