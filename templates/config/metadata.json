  "databases": {
    "meetings": {
      "queries": {
        "upcoming": {
          "sql": "select meeting, date, count(page) as pages from agendas where date >= current_date group by date, meeting order by date desc",
          "title": "Upcoming agendas",
          "hide_sql": true
        }
      },
      "tables": {
        "agendas": {
          "sort_desc": "date",
          "sort_asc": "page",
          "facets": ["meeting"]
        },
        "agendas_fts": {
          "hidden": true
        },
        "minutes_fts": {
          "hidden": true
        },
        "minutes": {
          "sort_desc": "date",
          "sort_asc": "page",
          "facets": ["meeting"]
        }
      }
    }
  }
